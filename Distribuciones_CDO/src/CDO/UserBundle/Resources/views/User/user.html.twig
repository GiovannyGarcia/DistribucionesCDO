{% extends '::userbase.html.twig' %}

 {% block title %}
     Distri CDO Cali
 {% endblock %}

{% block header %}
    <div id="title">
        <h1 id="encabezado">Bienvenidos</h1>
    </div>
{% endblock %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <span class="alert-success">
            {{ flashMessage }} <hr>
        </span>
    {% endfor %}

    <div id="login">
        <form class="form-horizontal" role="form" method="post" action="">
            <div class="form-group">
                <label for="input_id_empleado" class="col-sm-2 control-label">Usuario:</label>  <br>
                <div class="col-sm-10">
                    <input type="text" name="id_empleado" class="form-control" id="input_id_empleado" placeholder="identificacion"/> <br>
                </div>   <br>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-2 control-label">Contraseña:</label>  <br>
                <div class="col-sm-10">
                    <input type="password" name="contraseña" class="form-control" id="inputPassword" placeholder="Inregrese la contraseña" /> <br>
                </div>         <br>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Recordarme
                        </label>
                    </div>         <br>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Ingresar</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
